<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- banner -->
<mapper namespace="cn.ggx.dao.BannerDao">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="bannerMap" type="banner">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="img_url" property="imgUrl" jdbcType="VARCHAR" />
        <result column="target_url" property="targetUrl" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="VARCHAR" />
        <result column="flag" property="flag" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        b.id, b.img_url, b.target_url, b.type, b.flag, b.create_time
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有 -->
    <select id="findBannerAll" resultMap="bannerMap">
        SELECT
            <include refid="allColumns" />
        FROM banner b
    </select>

    <!-- 根据条件参数查询列表 -->
    <select id="findBannerByCondition" resultMap="bannerMap" parameterType="map">
        SELECT
            <include refid="allColumns" />
        FROM banner b WHERE 1 = 1
        <if test="imgUrl != null and imgUrl != ''">
            AND b.img_url LIKE CONCAT('%', #{imgUrl}, '%')
        </if>
        <if test="targetUrl != null and targetUrl != ''">
            AND b.target_url LIKE CONCAT('%', #{targetUrl}, '%')
        </if>
        <if test="type != null">
            AND b.type = #{type}
        </if>
        <if test="flag != null">
            AND b.flag = #{flag}
        </if>
        <if test="createTime != null">
            AND b.create_time = #{createTime}
        </if>
    </select>

    <!-- 根据主键查询信息 -->
    <select id="findBannerByIds" resultMap="bannerMap" parameterType="list">
        SELECT
            <include refid="allColumns" />
        FROM banner b WHERE b.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 新增信息 -->
    <!--默认是一个banner对象 所以不需要一个参数类型 == parameterType="banner"-->
    <insert id="addBanner">
        INSERT INTO banner (
            id, img_url, target_url, type, flag, create_time
        ) VALUES (
            #{id},
            #{imgUrl},
            #{targetUrl},
            #{type},
            #{flag},
            #{createTime}
        )
    </insert>

    <!-- 批量新增信息 -->
    <insert id="addBanners" parameterType="list">
        INSERT INTO banner (
            id, img_url, target_url, type, flag, create_time
        ) VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.id},
                #{item.imgUrl},
                #{item.targetUrl},
                #{item.type},
                #{item.flag},
                #{item.createTime}
            )
        </foreach>
    </insert>

    <!-- 修改信息 -->
    <update id="updateBanner">
        UPDATE banner
        <set>
            <if test="imgUrl != null">
                img_url = #{imgUrl},
            </if>
            <if test="targetUrl != null">
                target_url = #{targetUrl},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="flag != null">
                flag = #{flag},
            </if>
            <if test="createTime != null">
                create_time = #{createTime}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 批量修改信息 -->
    <update id="updateBanners" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE banner b
            <set>
                <if test="item.imgUrl != null">
                    b.img_url = #{item.imgUrl},
                </if>
                <if test="item.targetUrl != null">
                    b.target_url = #{item.targetUrl},
                </if>
                <if test="item.type != null">
                    b.`type` = #{item.type},
                </if>
                <if test="item.flag != null">
                    b.flag = #{item.flag},
                </if>
                <if test="item.createTime != null">
                    b.create_time = #{item.createTime}
                </if>
            </set>
            WHERE b.id = #{item.id}
        </foreach>
    </update>

    <!-- 根据主键删除 -->
    <delete id="deleteBannerById" parameterType="int">
        DELETE FROM banner WHERE id = #{id}
    </delete>

    <!-- 根据主键批量删除 -->
    <delete id="deleteBannerByIds" parameterType="list">
        DELETE FROM banner WHERE id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- user -->
<mapper namespace="cn.ggx.dao.UserDao">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="userMap" type="user">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="email" property="email" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="mobile" property="mobile" jdbcType="VARCHAR" />
        <result column="vip_flag" property="vipFlag" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        u.id, u.email, u.password, u.mobile, u.vip_flag, u.create_time
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有 -->
    <select id="findUserAll" resultMap="userMap">
        SELECT
            <include refid="allColumns" />
        FROM user u
    </select>

    <!-- 根据条件参数查询列表 -->
    <select id="findUserByCondition" resultMap="userMap" parameterType="map">
        SELECT
            <include refid="allColumns" />
        FROM user u WHERE 1 = 1
        <if test="email != null and email != ''">
            AND u.email LIKE CONCAT('%', #{email}, '%')
        </if>
        <if test="password != null and password != ''">
            AND u.password LIKE CONCAT('%', #{password}, '%')
        </if>
        <if test="mobile != null and mobile != ''">
            AND u.mobile LIKE CONCAT('%', #{mobile}, '%')
        </if>
        <if test="vipFlag != null">
            AND u.vip_flag = #{vipFlag}
        </if>
        <if test="createTime != null">
            AND u.create_time = #{createTime}
        </if>
    </select>

    <!-- 根据主键查询信息 -->
    <select id="findUserByIds" resultMap="userMap" parameterType="list">
        SELECT
            <include refid="allColumns" />
        FROM user u WHERE u.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 根据email查询信息 -->
    <select id="findUserByEmail" resultMap="userMap" parameterType="map">
        select
            <include refid="allColumns"/>
        from user u where email=#{email}
    </select>

    <!-- 新增信息 -->
    <insert id="addUser">
        INSERT INTO user (
            id, email, password, mobile, vip_flag, create_time
        ) VALUES (
            #{id},
            #{email},
            #{password},
            #{mobile},
            #{vipFlag},
            #{createTime}
        )
    </insert>

    <!-- 批量新增信息 -->
    <insert id="addUsers" parameterType="list">
        INSERT INTO user (
            id, email, password, mobile, vip_flag, create_time
        ) VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.id},
                #{item.email},
                #{item.password},
                #{item.mobile},
                #{item.vipFlag},
                #{item.createTime}
            )
        </foreach>
    </insert>

    <!-- 修改信息 -->
    <update id="updateUser">
        UPDATE user
        <set>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="mobile != null">
                mobile = #{mobile},
            </if>
            <if test="vipFlag != null">
                vip_flag = #{vipFlag},
            </if>
            <if test="createTime != null">
                create_time = #{createTime}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 批量修改信息 -->
    <update id="updateUsers" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE user
            <set>
                <if test="item.email != null">
                    email = #{item.email},
                </if>
                <if test="item.password != null">
                    password = #{item.password},
                </if>
                <if test="item.mobile != null">
                    mobile = #{item.mobile},
                </if>
                <if test="item.vipFlag != null">
                    vip_flag = #{item.vipFlag},
                </if>
                <if test="item.createTime != null">
                    create_time = #{item.createTime}
                </if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>

    <!-- 根据主键删除 -->
    <delete id="deleteUserById" parameterType="int">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <!-- 根据主键批量删除 -->
    <delete id="deleteUserByIds" parameterType="list">
        DELETE FROM user WHERE id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
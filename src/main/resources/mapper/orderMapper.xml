    <insert id="addOrders" parameterType="list">
        INSERT INTO order (
            id, user_id, commodity_price, flag, commodity_name, order_flag, create_time
        ) VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.id},
                #{item.userId},
                #{item.commodityPrice},
                #{item.flag},
                #{item.commodityName},
                #{item.orderFlag},
                #{item.createTime}
            )
        </foreach>

        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 新增信息 -->
    <insert id="addOrder">
        INSERT INTO order (
            id, user_id, commodity_price, flag, commodity_name, order_flag, create_time
        ) VALUES (
            #{id},
            #{userId},
            #{commodityPrice},
            #{flag},
            #{commodityName},
            #{orderFlag},
            #{createTime}
        )
    </insert>


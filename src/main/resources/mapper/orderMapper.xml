                user_id = #{userId},
            </if>
            <if test="commodityPrice != null">
                commodity_price = #{commodityPrice},
            </if>
            <if test="flag != null">
                flag = #{flag},
            </if>
            <if test="commodityName != null">
                commodity_name = #{commodityName},
            </if>
            <if test="orderFlag != null">
                order_flag = #{orderFlag},
            </if>
